require('generateworld')
require('movementHandler')
require('SpriteAnima')

function love.load()

 
   --setup world
   tilesize=32
   horizontaltiles=25
   verticaltiles=19
   sizeoverworld={6,12}
   loadtiles()
   world=createworld()
   overworld=createoverworld()
   currentworld=0

   --setup sprites
   loadSprite()



   --temporary stuff
   sprite=love.graphics.newImage("sprites/planesmall.gif")  
   speed = 200
   d_speed = 140
   xsprite=300
   ysprite=300
   width_sprite  =sprite:getWidth()
   height_sprite =sprite:getHeight()
   headingplane=0
   move = 'none'
end

